@using Escape.Models
@model IEnumerable<Art>
@{
    ViewBag.Title = "Index";
}

<!-- LOGO -->
<h3>from reality</h3>

<div>
    @{int i = 0;}
    @foreach (Art art in Model)
    {
        <div style="display: inline; float: left; margin: 10px;" id="part">
            <a href="/Art/Details/@art.id"> <img src=@Url.Content(art.artUrl) style="border-radius: 25px; height:250px; width:250px; position:relative;" /></a>
            <div>
                <b style="font-size: 28px;">@art.artName</b>
                <p>Artist: @art.creator.name</p>
            </div>
        </div>
    }
</div>

<div>
    <p id="add" style="color: lawngreen; font-size: 0px; position: absolute; bottom:70px; right:90px; width: 0px; height: 0px;">Add</p>
    <a style="position: absolute; bottom: 60px; right: 80px;" href="/Art/Add"><img id="plus" height="60px" width="60px" src="~/Poster/add.png" alt="Add new art" /></a>
</div>

@section Scripts{
    <script>
        $(function () {
            $("#plus").hover(function () {
                $("#add").animate({ height: "40px", width: "80px", fontSize: "50px", right: "160px" }, 1000);
            }, function () {
                $("#add").animate({ height: "0px", width: "0px", fontSize: "0px", right: "90px" }, 1000);
            });
        });
    </script>
}



